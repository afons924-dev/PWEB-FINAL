@page "/products"
@using MyMEDIA.Shared.Data
@using MyMEDIA.Shared.Entities
@inject ApplicationDbContext Context

<h3>Product Management</h3>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Supplier</th>
            <th>Base Price</th>
            <th>Final Price</th>
            <th>Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Products)
        {
            <tr>
                <td>@product.Title</td>
                <td>@product.SupplierId</td>
                <td>@product.BasePrice</td>
                <td>
                     @if (EditingId == product.Id)
                     {
                         <input type="number" step="0.01" @bind="product.FinalPrice" />
                     }
                     else
                     {
                         @product.FinalPrice
                     }
                </td>
                <td>@product.IsActive</td>
                <td>
                    @if (EditingId == product.Id)
                    {
                        <button class="btn btn-success btn-sm" @onclick="() => SaveProduct(product)">Save</button>
                    }
                    else
                    {
                        <button class="btn btn-secondary btn-sm" @onclick="() => EditingId = product.Id">Edit Price</button>
                        @if (!product.IsActive)
                        {
                            <button class="btn btn-primary btn-sm" @onclick="() => ActivateProduct(product)">Activate</button>
                        }
                        else
                        {
                            <button class="btn btn-warning btn-sm" @onclick="() => DeactivateProduct(product)">Deactivate</button>
                        }
                        <button class="btn btn-danger btn-sm" @onclick="() => DeleteProduct(product)">Delete</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@code {
    private List<Product> Products = new();
    private int? EditingId = null;

    protected override void OnInitialized()
    {
        LoadProducts();
    }

    private void LoadProducts()
    {
        Products = Context.Products.ToList();
    }

    private void ActivateProduct(Product product)
    {
        // Apply default margin if FinalPrice is 0 or equal to BasePrice?
        if (product.FinalPrice <= product.BasePrice)
        {
            product.FinalPrice = product.BasePrice * 1.2m; // Default 20%
        }
        product.IsActive = true;
        Context.SaveChanges();
    }

    private void DeactivateProduct(Product product)
    {
        product.IsActive = false;
        Context.SaveChanges();
    }

    private void SaveProduct(Product product)
    {
        Context.SaveChanges();
        EditingId = null;
    }

    private void DeleteProduct(Product product)
    {
        Context.Products.Remove(product);
        Context.SaveChanges();
        LoadProducts();
    }
}
