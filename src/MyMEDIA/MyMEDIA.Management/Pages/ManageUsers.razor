@page "/users"
@using Microsoft.AspNetCore.Identity
@using MyMEDIA.Shared.Data
@inject UserManager<ApplicationUser> UserManager
@inject RoleManager<IdentityRole> RoleManager

<h3>User Management</h3>

<div class="mb-3">
    <button class="btn btn-primary" @onclick="LoadUsers">Refresh</button>
</div>

@if (Users == null)
{
    <p>Loading...</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Email</th>
                <th>Full Name</th>
                <th>Type</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Users)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.FullName</td>
                    <td>@user.UserType</td>
                    <td>@user.Status</td>
                    <td>
                        @if (user.Status == "Pending")
                        {
                            <button class="btn btn-success btn-sm" @onclick="() => ActivateUser(user)">Activate</button>
                        }
                        else
                        {
                            <button class="btn btn-warning btn-sm" @onclick="() => DeactivateUser(user)">Deactivate</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<ApplicationUser> Users = new();

    protected override void OnInitialized()
    {
        LoadUsers();
    }

    private void LoadUsers()
    {
        Users = UserManager.Users.OrderBy(u => u.UserType).ThenBy(u => u.Email).ToList();
    }

    private async Task ActivateUser(ApplicationUser user)
    {
        user.Status = "Active";
        await UserManager.UpdateAsync(user);
        LoadUsers();
    }

    private async Task DeactivateUser(ApplicationUser user)
    {
        user.Status = "Pending";
        await UserManager.UpdateAsync(user);
        LoadUsers();
    }
}
